$(document).ready(function(){
  
  // function ButtonTap for HomeButton and AppsWhenTapped/Clicked
    $(".homebutton").mousedown(function() {
        $(this).addClass("buttondown");
        $(".homebutton").mouseup(function() {
            $(".buttondown").removeClass("buttondown");
        });
    });

    //Click App to Open App
    $(".page").each(function(){
        //Click App to Open App
        $(".apps").mousedown(function() {
            $(this).find(".tiles").addClass("tilemousedown");
            $(this).mouseup(function() {
                var page = $(this).parent();
                $(".page").removeClass("page");
                $(".tilemousedown").removeClass("tilemousedown");
                page.addClass("pageshow");
                page.children().hide();
                
                // alert("removingappsclass")
                

